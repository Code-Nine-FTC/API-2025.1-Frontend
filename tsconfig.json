{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@pages/*": ["pages/*"],
      "@routes/*": ["routes/*"]
    },
    "typeRoots": ["node_modules/@types", "src/types"],
    "strict": true,
    "noEmit": true
  },
  "include": ["src", "vite.config.ts"]
}
